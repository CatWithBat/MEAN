<!doctype html>
<html>
	<head>
		<meta charset = 'utf-8'>
		<title>MessageBoard</title>
		<style>
		h1{
		background-color:pink;
		}
		.messages {
		color:orange;
		background-color:cyan;
		}
		button{
		border-radius:5px;
		background-color:black;
		color:white;
		}
		</style>

	</head>
	<body>
		<h1> Welcome to Message board</h1>
		<form action="/messages" method="post">
			<input type="text" name="name">
			<input type="textarea" name="message" rows="8" cols="40"></textarea>
			<button>Post</button>
		</form>
		<% for (var message in messages) { %>
		<div class="messages">
			<h2>Name: <%= messages[message].name %></h2>
			<h1>Message:<%= messages[message].message %> </h2>
			<% for (var comment =0;comment < messages[message]._comments.length; comment++){ %>
			<h3>Name: <%= messages[message]._comments[comment].name %>
			<h3>Comment: <%= messages[message]._comments[comment].comment %></h3>
			<% } %>
			<form action="/comments/<%= messages[message]._id %>" method="post">
				<input type="text" name="name">
				<input type="textarea" name="comment" rows="8" cols="40"></textarea>
				<button>Post</button>
			</form>
		</div>
		<% } %>
	</body>
</html>